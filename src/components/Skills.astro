---
import BorderAnimated from "./BorderAnimated.astro"
---

<BorderAnimated>
    <div class="skills">
        <span id="typed"></span>
        <div class="carousel">
            <ul>
                <li>
                    React
                </li>
                <li>
                    HTML5
                </li>
                <li>
                    CSS3
                </li>
                <li>
                    Javascript
                </li>
            </ul>
        </div>
    </div>
</BorderAnimated>

<style>
    .skills {
        padding: 15px;
        border-radius: 20px;
        text-align: center;

        span {
            color: var(--light-color);
            font-size: var(--text-2xl);
            font-weight: var(--semi-bold);
        }
    }

    .carousel {
        display: flex;
        align-items: center;
        justify-content: center;

        ul {
            padding: 0;
            display: flex;
            gap: 15px;
        }
    }
</style>

<script>
    import Typed from "typed.js";

    document.addEventListener("astro:page-load", () => {
      const typed = new Typed("#typed", {
        strings: ["Habilidades"],
        typeSpeed: 115,
        loop: false,
        showCursor: true,
      });
    });
</script>