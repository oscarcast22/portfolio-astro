---
const { data }  = Astro.props.project;
---
<div class="project-card">
    <div class="image-wrapper">
        <a href="/">
            <img src={data.img} alt={data.img_alt || data.title} />
            <div class="description-overlay">
                <p>{data.description}</p>
            </div>
        </a>
    </div>
    <div class="card-content">
        <h5>
            <a href="/">{data.title}</a>
        </h5>
        <ul>
            {data.tech.map((tech: string) => (
                <li>{tech}</li>
            ))}
        </ul>
    </div>
</div>

<style>
    .project-card {
        background-color: var(--gray-100);
        border-radius: 15px;
        box-shadow: var(--shadow-m);
        transition: box-shadow 0.3s ease;
        max-width: 400px;
        margin: auto;
        text-align: center;
        overflow: hidden;
        transition: transform .3s ease;
    }

    .project-card:hover {
        box-shadow: var(--shadow-l);
    }

    .image-wrapper {
        position: relative;
        width: 100%;
        overflow: hidden;
    }

    .image-wrapper a {
        display: block;
    }

    .project-card img {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.4s ease;
    }

    .image-wrapper:hover img {
        transform: scale(1.05);
    }

    .description-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        background: linear-gradient(0deg, rgba(var(--background-rgb) , .98) 0%, rgba(var(--background-rgb), 0.5830707282913166) 77%, rgba(var(--background-rgb), 0) 100%);
        color: white;
        padding: 20px;
        box-sizing: border-box;
        transform: translateY(100%);
        transition: transform 0.4s ease;

        p {
            color: #ffffff;
        }
    }

    .image-wrapper:hover .description-overlay {
        transform: translateY(0);
    }

    .card-content {
        padding: 20px;
    }

    .card-content h5 {
        font-size: 1.5em;
        margin: 0 0 15px;
        color: var(--primary);
    }

    .card-content h5 a {
        text-decoration: none;
        color: inherit;
    }

    .card-content h5 a:hover {
        text-decoration: underline;
    }

    .card-content ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .card-content ul li {
        background-color: var(--gray-200);
        border-radius: 5px;
        padding: 5px 10px;
        margin: 5px;
        font-size: 0.875em;
    }
</style>
